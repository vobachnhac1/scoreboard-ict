{
  "name": "score-board-dht",
  "author": "NhacVB",
  "version": "1.0.0",
  "license": "DHT-NHACVB",
  "description": "Phần mềm chấm điểm thi đấu Võ Hiện Đại",
  "main": "electron.js",
  "build": {
    "productName": "VO HIEN DAI SCOREBOARD",
    "appId": "com.dht.scoreboard",
    "copyright": "Copyright (C) 2026 Võ Hiện Đại JSC",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "server/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.sports",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "type": "distribution"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VÕ HIỆN ĐẠI",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "VHDScoreBoard-Portable.exe"
    },
    "npmRebuild": true
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack --watch\" \"electron .\"",
    "build": "rimraf ./public && mkdir public && webpack --mode production --progress",
    "check": "node scripts/check-build-ready.js",
    "rebuild:native": "node scripts/rebuild-native.js",
    "rebuild:native:universal": "node scripts/rebuild-native.js --universal",
    "prebuild:mac": "npm run build && npm run rebuild:native",
    "prebuild:mac:universal": "npm run build && npm run rebuild:native:universal",
    "prebuild:win": "npm run build && npm run rebuild:native",
    "dist:win": "npm run prebuild:win && electron-builder --win",
    "dist:win:skip-rebuild": "npm run build && electron-builder --win --dir",
    "dist:win:portable": "npm run prebuild:win && electron-builder --win=portable",
    "dist:win:nsis": "npm run prebuild:win && electron-builder --win=nsis",
    "dist:mac": "npm run prebuild:mac && electron-builder --mac",
    "dist:mac:x64": "npm run prebuild:mac && electron-builder --mac --x64",
    "dist:mac:arm64": "npm run prebuild:mac && electron-builder --mac --arm64",
    "dist:mac:universal": "npm run prebuild:mac:universal && electron-builder --mac --universal",
    "fix-install": "./node_modules/.bin/electron-rebuild && node node_modules/java/postInstall.js",
    "mac": "yarn electron-builder --mac",
    "win": "yarn electron-builder --win=nsis"
  },
  "devDependencies": {
    "@babel/core": "7.24.5",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.24.5",
    "@babel/preset-react": "7.24.1",
    "@types/lowdb": "^2.0.3",
    "autoprefixer": "^10.4.19",
    "babel-loader": "9.1.3",
    "babel-preset-es2015": "6.24.1",
    "concurrently": "8.2.2",
    "copy-webpack-plugin": "12.0.2",
    "css-loader": "^7.1.1",
    "electron": "^30.0.4",
    "electron-builder": "^24.13.3",
    "electron-devtools-assembler": "^1.2.0",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^3.2.9",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.6.0",
    "nodemon": "^3.1.9",
    "postcss-cssnext": "3.1.1",
    "postcss-import": "16.1.0",
    "postcss-load-config": "5.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-nesting": "12.1.2",
    "rimraf": "5.0.5",
    "style-loader": "^4.0.0",
    "url-loader": "4.1.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@headlessui/react": "^2.0.4",
    "@heroicons/react": "^2.1.3",
    "@reduxjs/toolkit": "^2.0.1",
    "@tailwindcss/forms": "^0.5.7",
    "antd": "^5.17.4",
    "axios": "^1.8.4",
    "better-sqlite3": "11.5.0",
    "body-parser": "1.20.2",
    "classnames": "2.5.1",
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "electron-reloader": "^1.2.3",
    "excel4node": "^1.8.2",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "history": "^5.3.0",
    "http": "^0.0.1-security",
    "i18next": "^23.11.3",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.9.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "npm": "^10.8.0",
    "postcss": "^8.4.38",
    "qrcode": "^1.5.4",
    "qrcode.react": "^3.1.0",
    "react": "18.3.1",
    "react-brackets": "^0.4.7",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.5",
    "react-hotkeys-hook": "^4.5.0",
    "react-i18next": "^14.1.1",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.23.0",
    "react-svg-pan-zoom": "^3.13.1",
    "react-tournament-brackets": "^1.0.37",
    "read-excel-file": "^5.8.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "sass": "^1.76.0",
    "sass-loader": "^14.2.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.7.4",
    "systeminformation": "^5.25.11",
    "tailwindcss": "^3.4.3",
    "uuid": "^11.1.0",
    "write-excel-file": "^2.0.0",
    "xlsx": "^0.18.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-cssnext": {
        "browsers": [
          "last 2 versions",
          "> 5%"
        ]
      },
      "postcss-nesting": {}
    }
  },
  "engines": {
    "node": ">=20"
  }
}
