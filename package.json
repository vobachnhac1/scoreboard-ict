{
  "name": "score-board-dht",
  "author": "NhacVB",
  "version": "1.0.0",
  "license": "DHT-NHACVB",
  "description": "Phần mềm chấm điểm phiên bản nâng cấp",
  "main": "electron.js",
  "build": {
    "productName": "ScoreBoard Version 2.0",
    "appId": "com.dht.scoreboard",
    "copyright": "Copyright (C) 2024 DHT JSC",
    "artifactName": "ScoreBoard.exe",
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"webpack --watch\" \"electron .\"",
    "build": "rimraf ./public && mkdir public && webpack --progress -p",
    "dist:win": "electron-builder --win=portable",
    "dist:mac": "electron-builder --mac --universal",
    "fix-install": "./node_modules/.bin/electron-rebuild && node node_modules/java/postInstall.js"
  },
  "devDependencies": {
    "@babel/core": "7.24.5",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.24.5",
    "@babel/preset-react": "7.24.1",
    "@types/lowdb": "^1.0.15",
    "autoprefixer": "^10.4.19",
    "babel-loader": "9.1.3",
    "babel-preset-es2015": "6.24.1",
    "concurrently": "8.2.2",
    "copy-webpack-plugin": "12.0.2",
    "css-loader": "^7.1.1",
    "electron": "^30.0.4",
    "electron-builder": "^24.13.3",
    "electron-devtools-assembler": "^1.2.0",
    "electron-rebuild": "^3.2.9",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.6.0",
    "postcss-cssnext": "3.1.1",
    "postcss-import": "16.1.0",
    "postcss-load-config": "5.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-nesting": "12.1.2",
    "rimraf": "5.0.5",
    "style-loader": "^4.0.0",
    "url-loader": "4.1.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@headlessui/react": "^2.0.4",
    "@heroicons/react": "^2.1.3",
    "@reduxjs/toolkit": "^2.0.1",
    "@tailwindcss/forms": "^0.5.7",
    "antd": "^5.16.4",
    "axios": "^1.6.5",
    "body-parser": "1.20.2",
    "classnames": "2.5.1",
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "electron-reloader": "^1.2.3",
    "excel4node": "^1.8.2",
    "express": "4.19.2",
    "file-saver": "^2.0.5",
    "history": "^5.3.0",
    "http": "^0.0.1-security",
    "i": "^0.3.7",
    "i18next": "^23.11.3",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lowdb": "1.0.0",
    "mini-css-extract-plugin": "^2.9.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "npm": "^10.8.0",
    "postcss": "^8.4.38",
    "qrcode": "^1.5.3",
    "qrcode.react": "^3.1.0",
    "react": "18.3.1",
    "react-brackets": "^0.4.7",
    "react-dom": "18.3.1",
    "react-hotkeys-hook": "^4.5.0",
    "react-i18next": "^14.1.1",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.23.0",
    "react-tournament-brackets": "^1.0.37",
    "read-excel-file": "^5.8.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "sass": "^1.76.0",
    "sass-loader": "^14.2.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "tailwindcss": "^3.4.3",
    "uuid": "^9.0.1",
    "write-excel-file": "^2.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": false
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-cssnext": {
        "browsers": [
          "last 2 versions",
          "> 5%"
        ]
      },
      "postcss-nesting": {}
    }
  }
}
